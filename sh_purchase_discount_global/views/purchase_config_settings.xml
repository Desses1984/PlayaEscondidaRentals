<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_setting_inherit_id_form" model="ir.ui.view">
        <field name="name">purchase.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Purchase Discount Setting</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="discount_applies_on" />
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="discount_applies_on" class="o_light_label" widget="radio" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sh_po_discount_account_id" />
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="sh_po_discount_account_id"  />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>